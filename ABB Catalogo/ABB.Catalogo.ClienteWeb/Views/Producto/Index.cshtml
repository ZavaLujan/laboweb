@model IEnumerable<ABB.Catalogo.Entidades.Core.Producto>

@{
    ViewBag.Title = "Productos";
}

<div class="container mt-4">
    <h2 class="text-center">Listado de Productos</h2>

    <div class="d-flex justify-content-between mb-3">
        <p class="lead">Aquí puedes ver y administrar los productos.</p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Crear Nuevo Producto</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Línea</th>
                <th>Garantía</th>
                <th>Precio</th>
                <th>Categoría</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NomProducto)</td>
                    <td>@Html.DisplayFor(modelItem => item.MarcaProducto)</td>
                    <td>@Html.DisplayFor(modelItem => item.ModeloProducto)</td>
                    <td>@Html.DisplayFor(modelItem => item.LineaProducto)</td>
                    <td>@Html.DisplayFor(modelItem => item.GarantiaProducto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescCategoria)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Edit", new { id = item.IdProducto })" class="btn btn-sm btn-warning">Editar</a>
                            <a href="@Url.Action("Details", new { id = item.IdProducto })" class="btn btn-sm btn-info">Detalles</a>
                            <a href="@Url.Action("Delete", new { id = item.IdProducto })" class="btn btn-sm btn-danger">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
