@model ABB.Catalogo.Entidades.Core.Producto

@{
    ViewBag.Title = "Editar Producto";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Producto</h2>

    @using (Html.BeginForm("Edit", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
            @Html.HiddenFor(model => model.IdProducto)

            <!-- ID Categoría -->
            <div class="col-md-6 mb-3">
                <label for="IdCategoria" class="form-label">Categoría</label>
                @Html.DropDownList("IdCategoria", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdCategoria, "", new { @class = "text-danger" })
            </div>

            <!-- Nombre del Producto -->
            <div class="col-md-6 mb-3">
                <label for="NomProducto" class="form-label">Nombre del Producto</label>
                @Html.EditorFor(model => model.NomProducto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomProducto, "", new { @class = "text-danger" })
            </div>

            <!-- Marca -->
            <div class="col-md-6 mb-3">
                <label for="MarcaProducto" class="form-label">Marca</label>
                @Html.EditorFor(model => model.MarcaProducto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MarcaProducto, "", new { @class = "text-danger" })
            </div>

            <!-- Modelo -->
            <div class="col-md-6 mb-3">
                <label for="ModeloProducto" class="form-label">Modelo</label>
                @Html.EditorFor(model => model.ModeloProducto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ModeloProducto, "", new { @class = "text-danger" })
            </div>

            <!-- Línea -->
            <div class="col-md-6 mb-3">
                <label for="LineaProducto" class="form-label">Línea</label>
                @Html.EditorFor(model => model.LineaProducto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LineaProducto, "", new { @class = "text-danger" })
            </div>

            <!-- Garantía -->
            <div class="col-md-6 mb-3">
                <label for="GarantiaProducto" class="form-label">Garantía</label>
                @Html.EditorFor(model => model.GarantiaProducto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GarantiaProducto, "", new { @class = "text-danger" })
            </div>

            <!-- Precio -->
            <div class="col-md-6 mb-3">
                <label for="Precio" class="form-label">Precio</label>
                @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
            </div>

            <!-- Imagen -->
            <div class="col-md-6 mb-3">
                <label for="imagenFile" class="form-label">Imagen</label>
                <input type="file" name="imagenFile" id="imagenFile" class="form-control" />
                @if (Model.Imagen != null)
                {
                    <img src="@String.Format("data:image/jpeg;base64,{0}", Convert.ToBase64String(Model.Imagen))"
                         alt="Imagen actual" class="img-fluid mt-2" style="max-width: 100px;" />
                }
            </div>

            <!-- Descripción Técnica -->
            <div class="col-md-12 mb-3">
                <label for="DescripcionTecnica" class="form-label">Descripción Técnica</label>
                @Html.TextAreaFor(model => model.DescripcionTecnica, new { @class = "form-control", rows = "4" })
                @Html.ValidationMessageFor(model => model.DescripcionTecnica, "", new { @class = "text-danger" })
            </div>

            <!-- Botones -->
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary">Guardar</button>
                @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary ms-2" })
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
