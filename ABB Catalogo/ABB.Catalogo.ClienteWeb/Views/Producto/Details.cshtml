@model ABB.Catalogo.Entidades.Core.Producto

@{
    ViewBag.Title = "Detalles del Producto";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Detalles del Producto</h2>

    <div class="row">
        <div class="col-md-12">
            <h4 class="text-primary">Información del Producto</h4>
            <hr />
        </div>

        <!-- Primera Columna -->
        <div class="col-md-6 mb-3">
            <strong>Nombre del Producto:</strong>
            <p>@Html.DisplayFor(model => model.NomProducto)</p>
        </div>

        <div class="col-md-6 mb-3">
            <strong>Marca:</strong>
            <p>@Html.DisplayFor(model => model.MarcaProducto)</p>
        </div>

        <div class="col-md-6 mb-3">
            <strong>Modelo:</strong>
            <p>@Html.DisplayFor(model => model.ModeloProducto)</p>
        </div>

        <div class="col-md-6 mb-3">
            <strong>Línea:</strong>
            <p>@Html.DisplayFor(model => model.LineaProducto)</p>
        </div>

        <div class="col-md-6 mb-3">
            <strong>Garantía:</strong>
            <p>@Html.DisplayFor(model => model.GarantiaProducto)</p>
        </div>

        <div class="col-md-6 mb-3">
            <strong>Precio:</strong>
            <p>@Html.DisplayFor(model => model.Precio)</p>
        </div>

        <!-- Descripción Técnica -->
        <div class="col-md-12 mb-3">
            <strong>Descripción Técnica:</strong>
            <p>@Html.DisplayFor(model => model.DescripcionTecnica)</p>
        </div>

        <!-- Imagen (opcional) -->
        <div class="col-md-12 mb-3 text-center">
            @if (Model.Imagen != null)
            {
                <strong>Imagen del Producto:</strong>
                <br />
                <img src="@String.Format("data:image/jpeg;base64,{0}", Convert.ToBase64String(Model.Imagen))"
                     alt="Imagen del Producto" class="img-fluid mt-2" style="max-width: 300px;" />
            }
        </div>

        <!-- Categoría -->
        <div class="col-md-6 mb-3">
            <strong>Categoría:</strong>
            <p>@Html.DisplayFor(model => model.DescCategoria)</p>
        </div>
    </div>

    <div class="text-center mt-4">
        @Html.ActionLink("Editar", "Edit", new { id = Model.IdProducto }, new { @class = "btn btn-primary me-2" })
        @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
