@model IEnumerable<ABB.Catalogo.Entidades.Core.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Usuarios</h2>

<p>
    @Html.ActionLink("Crear Nuevo Usuario", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(model => model.CodUsuario)</th>
        <th>@Html.DisplayNameFor(model => model.Nombres)</th>
        <th>@Html.DisplayNameFor(model => model.DesRol)</th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.CodUsuario)</td>
            <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
            <td>@Html.DisplayFor(modelItem => item.DesRol)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdUsuario }, new { @class = "btn btn-warning btn-sm" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdUsuario }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }
</table>